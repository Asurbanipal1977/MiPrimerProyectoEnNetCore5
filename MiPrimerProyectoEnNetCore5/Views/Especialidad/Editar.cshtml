@using MiPrimerProyectoEnNetCore5.Clases;
@model EspecialidadCLS
@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Especialidad</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Guardar" method="post" id="frmEnviar">
            <div class="form-group">
                <label asp-for="idEspecialidad"></label>
                <input asp-for="idEspecialidad" class="form form-control" readonly />
                <span asp-validation-for="idEspecialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre"></label>
                <input asp-for="nombre" class="form form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
                @if (Model != null && !string.IsNullOrWhiteSpace(Model.MensajeError))
                {
                    <span class="text-danger">@Model.MensajeError</span>
                }
            </div>
            <div class="form-group">
                <label asp-for="descripcion"></label>
                <input asp-for="descripcion" class="form form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="Guardar()" />
                <a asp-action="Index" class="btn btn-danger">Regresar</a>
            </div>
        </form>
    </div>
</div>

<script>
    function Guardar() {
        AbrirModalGenerica().then((result) => {
            if (result.isConfirmed) {
                $("#frmEnviar").submit();
            }
        })
    }
</script>
