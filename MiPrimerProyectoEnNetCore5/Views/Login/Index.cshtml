
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="col-md-6 m-auto" style="position:relative;top:5em">

    <div style="display:grid;grid-template-columns:1fr 1fr;grid-template-rows:600px;grid-gap:2em">

        <div>
            <img style="width:100%" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcT82L50z2IJu1PeMUxuyFLrfkXGDSfTlnZh1i5ZpUTekgrSrbwW&usqp=CAU" />
        </div>
        <div>
            <div class="form-group">
                <label>Usuario</label>
                <input type="text" class="form-control" id="txtUsu" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" class="form-control" id="txtPassword" />
            </div>
            <input type="button" class="btn btn-block btn btn-primary" value="Enviar" onclick="Enviar()" />

            <div class="mt-3">
                <a asp-area="" asp-controller="AgregarUsuario" asp-action="Index">
                    Registrarse Usuario
                </a>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<!-- JavaScript Bundle with Popper -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/sweet.js" asp-append-version="true"></script>
<script src="~/js/generic.js" asp-append-version="true"></script>
<script src="~/js/paginate.js" asp-append-version="true"></script>
<script src="~/js/jquery-ui.js"></script>
<script src="~/js/moment.js"></script>
<script>
    function Enviar() {
        $('#lblModalTitle').html('Editar Doctor');
        $('#divError').html("");
        $('#divPersonaAltaMod').attr("style", "display:none");
        $.post('Login/login',
            {
                user: $('#txtUsu').val(),
                password: $('#txtPassword').val()
            },
            function (data) {
                if (data == "KO")
                    Incorrecto("Usuario o contraseña incorrecta");
                else {
                    Correcto("Bienvenido");
                    document.location.href = 'PaginaPrincipal';
                }
            });
    }
</script>